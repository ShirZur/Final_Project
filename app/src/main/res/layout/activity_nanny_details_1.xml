<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".NannyDetails1Activity">

    <LinearLayout
        android:id="@+id/the_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/c_background2"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width= "wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Some details about you"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/bear"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/the_image"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/first_name_editTXT"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="First Name"
            android:background="@drawable/custom_input"
            android:paddingStart="12dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="12dp"
            />

        <EditText
            android:id="@+id/last_name_editTXT"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Last Name"
            android:background="@drawable/custom_input"
            android:paddingStart="12dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="12dp"
            />

        <EditText
            android:id="@+id/number_phone_editTXT"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Number Phone"
            android:background="@drawable/custom_input"
            android:paddingStart="12dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="12dp"
            />

        <EditText
            android:id="@+id/age_editTXT"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="age"
            android:background="@drawable/custom_input"
            android:paddingStart="12dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="12dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/next1_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textAllCaps="false"
        android:backgroundTint="@color/c_background"
        android:text="Next"
        />

    <Button
        android:id="@+id/back1_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/c_background"
        android:textAllCaps="false"
        android:text="back"
        />


</RelativeLayout>