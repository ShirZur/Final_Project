<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    tools:context=".FamilyDetails2Activity">

    <LinearLayout
        android:id="@+id/the_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/c_background2"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width= "wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="A few more details about your family.."
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/bear"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/the_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We need a babysitter who is comfortable with"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <CheckedTextView
                android:id="@+id/pets_checked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pets"
                android:gravity="center"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:padding="10dp"
                />

            <CheckedTextView
                android:id="@+id/cooking_checked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cooking"
                android:gravity="center"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:padding="10dp"
                />

            <CheckedTextView
                android:id="@+id/hw_checked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help with homework"
                android:gravity="center"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:padding="10dp"
                />

            <CheckedTextView
                android:id="@+id/house_checked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Household chores"
                android:gravity="center"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="false"
                android:padding="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hourly_rate_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@id/chacked_text_layout"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Hourly wage"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="10dp"
                />
            <Spinner
                android:id="@+id/hourly_wage_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_spinner"
                android:entries="@array/hourly_rate"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next2_family_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textAllCaps="false"
        android:backgroundTint="@color/c_background"
        android:text="Next"
        />

    <Button
        android:id="@+id/back2_family_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/c_background"
        android:textAllCaps="false"
        android:text="back"
        />





</RelativeLayout>