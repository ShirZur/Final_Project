<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartCreateProfileActivity">

   <VideoView
       android:layout_width="wrap_content"
       android:layout_height="250dp"
       android:layout_margin="16dp"
       android:id="@+id/videoview2"
       />



        <TextView
            android:id="@id/create_profile_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your profile in a few simple steps"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@id/videoview2"
            android:layout_margin="30dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            />



    <Button
        android:id="@+id/start_BTN"
        android:layout_below="@+id/create_profile_TXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lets start !"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/c_background"
        />



</RelativeLayout>